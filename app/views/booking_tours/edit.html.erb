<div class="container">  
  <h5 style="padding-top: 50px"><strong>Edit your booking</strong></h5>
  <% seats = @tour.seats + @booking_tour.quantity.to_i - @tour_detail.booking_tours&.select{|b| b.book?}.sum{|x| x.quantity} %>
  <%= render "shared/booking_tour_form", seats: seats, tour_detail: @tour_detail, tour: @tour, booking_tour: @booking_tour %>
</div>
