<div class="container">
  <h2>Change your password</h2>
  <div class="row">
    <div class="col-md-4 col-md-offset-3" style="margin: auto;">
      <div class="registrations_form">
        <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
          <%= render "devise/shared/error_messages", resource: resource %>
          <%= f.hidden_field :reset_password_token %>

          <%= f.password_field :password, class: 'form-control', placeholder: "New password" %>

          <%= f.password_field :password_confirmation, class: 'form-control', placeholder: "Confirm password" %>
          <%= f.submit "Change my password", class: "btn btn-primary btn-block" %>
        <% end %>

        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</div>
