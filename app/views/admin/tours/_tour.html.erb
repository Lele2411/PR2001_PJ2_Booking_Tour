<tr id="tour_<%= tour.id %>">
  <td><%= tour.id %></td>
  <td><%= tour.name %></td>
  <td><%= tour.category.name %></td>
  <td><%= link_to "/admin/tours/#{tour.id}" do %>
        <i class="fas fa-eye"></i>
      <% end %>
      <%= link_to "/admin/tours/#{tour.id}/edit" do %>
        <i class="fas fa-edit" style="color:green"></i>
      <% end %>
      <%= link_to "/admin/tours/#{tour.id}", method: :delete, data: { confirm: "You sure?" } do %>
        <i class="fa fa-trash" style="color:red"></i>
      <% end %>
  </td>
</tr>