 <div id="category_messages">
   <h1>All Categories</h1>
   <table id="categories">
    <thead>
      <tr>
       <th>ID</th>
       <th>Name</th>
       <th colspan="3">Action</th>
     </tr>
    </thead>
    <tbody>
      <%= render @categories %>
    </tbody>
   </table>
 </div>

  <div id="div-button-new">
  <button id="button-new">New</button>
  <div class="row" id="form-button-new">
    <div class="col-md-6 col-md-offset-3">
      <%= form_for ([:admin, @category]) do |f| %>
        <%= render 'shared/error_messages', object: f.object %>

        <%= f.label :category_name, "Category Name" %>
        <%= f.text_field :category_name, class: 'form-control' %>
        <%= f.submit "Create", class: "btn btn-primary" %>
      <% end %>
    </div>
  </div>
</div>


<script>
$(document).ready(function(){
  $("#button-new").click(function(){
    $("#form-button-new").toggle();
  });
});
</script>
